@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 style="color:white">@ViewData["Title"]</h3>

<div class="row" style="margin-bottom:8px">
    <div class="col-md-6">
        <p style="color:white">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p style="color:white">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-secondary">Delete</a>
        </p>
    </div>
</div>

<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
